
@{
    ViewBag.Title = "BottomMenuForm";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="kr-form-wrap" id="form">
    <div class="col-xs-12 kr-form-item">
        <div class="kr-form-item-title">名称<font face="宋体">*</font></div>
        <input id="F_Name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-12 kr-form-item">
        <div class="kr-form-item-title">排序码<font face="宋体">*</font></div>
        <input id="F_Sort" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-12 kr-form-item">
        <div class="kr-form-item-title">链接类型</div>
        <div class="radio kr-radio" type="kr-radio" id="F_UrlType">
            <label>
                <input name="F_UrlType" type="radio" value="1" checked="checked" />
                内部链接
            </label>
            <label>
                <input name="F_UrlType" type="radio" value="2" />
                外部链接
            </label>
        </div>
    </div>
    <div class="col-xs-12 kr-form-item" style="display:none;">
        <div class="kr-form-item-title">外部链接</div>
        <input id="F_Url" type="text" class="form-control" />
    </div>
    <div class="col-xs-12 kr-form-item">
        <div class="kr-form-item-title">链接页面</div>
        <div id="F_Page"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/KR_PortalSite/Views/HomeConfig/BottomMenuForm.js")

