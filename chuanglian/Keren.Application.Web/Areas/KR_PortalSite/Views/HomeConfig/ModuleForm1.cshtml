
@{
    ViewBag.Title = "配置模块1";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@Html.AppendCssFile("/Areas/KR_PortalSite/Views/HomeConfig/ModuleForm1.css")
<div class="body">
    <div class="bodycontent">
        <div class="form kr-form-wrap" id="form1">
            <div class="col-xs-12 kr-form-item">
                <div class="kr-form-item-title">名称<font face="宋体">*</font></div>
                <input id="F_Name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </div>
            <div class="col-xs-12 kr-form-item">
                <div class="kr-form-item-title">更多</div>
                <div id="F_Url"></div>
            </div>
        </div>
        <div class="gird">
            <div class="top">
                <div class="title">
                    已选择文章
                </div>
                <div class="content" id="selected_grid">
                </div>
            </div>
            <div class="bottom">
                <div class="title">
                    选择文章
                </div>
                <div class="search-bar">
                    <div class="kr-layout-tool-item" style="width: 200px;">
                        <div id="F_Category" style="border-radius: 4px;"></div>
                    </div>
                    <div class="kr-layout-tool-item" style="width: 200px;">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" />
                    </div>
                    <div class="kr-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;<span class="krlg">查询</span></a>
                    </div>
                </div>
                <div class="content" id="select_grid">
                </div>
