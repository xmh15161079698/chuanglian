@{
    ViewBag.Title = "任务计划模板";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="kr-layout">
    <div class="kr-layout-center">
        <div class="kr-layout-wrap kr-layout-wrap-notitle">
            <div class="kr-layout-tool">
                <div class="kr-layout-tool-left">
                    <div class="kr-layout-tool-item">
                        <div id="datesearch"></div>
                    </div>
                    <div class="kr-layout-tool-item">
                        <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入任务名称" />
                    </div>
                    <div class="kr-layout-tool-item">
                        <a id="btn_Search" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;查询</a>
                    </div>
                </div>
                <div class="kr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="kr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" keren-authorize="yes">
                        <a id="kr_add" class="btn btn-default"><i class="fa fa-plus krlg"></i>&nbsp;新增</a>
                        <a id="kr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o krlg"></i>&nbsp;编辑</a>
                        <a id="kr_delete" class="btn btn-default"><i class="fa fa-trash-o krlg"></i>&nbsp;删除</a>

                    </div>
                    <div class=" btn-group btn-group-sm" keren-authorize="yes"> 
                        <a id="kr_disabled" class="btn btn-default"><i class="fa fa-pause-circle-o krlg"></i>&nbsp;暂停任务</a>
                        <a id="kr_enabled" class="btn btn-default"><i class="fa fa-play-circle-o krlg"></i>&nbsp;启动任务</a>  
                    </div>
                </div>
            </div>
            <div class="kr-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/KR_TaskScheduling/Views/TSScheme/Index.js")
