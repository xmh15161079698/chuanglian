@{
    ViewBag.Title = "轮播图管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="kr-form-wrap" id="form">
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">标题<font face="宋体">*</font></div>
        <input id="F_Title" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"/>
    </div>
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">链接类型</div>
        <div id="F_LinkType"></div>
    </div>
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">链接地址</div>
        <input id="F_LinkUrl" type="text" class="form-control" />
    </div>
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">图片<font face="宋体">*</font></div>
        <div id="F_Image" isvalid="yes" checkexpession="NotNull"></div>
    </div>
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">序号<font face="宋体">*</font></div>
        <input id="F_SortOrder" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 kr-form-item" data-table="WD_Banner">
        <div class="kr-form-item-title">描述</div>
        <input id="F_Desc" type="text" class="form-control" />
    </div>
</div>
@Html.AppendJsFile("/Areas/KR_CodeModule/Views/WD_Banner/Form.js")
